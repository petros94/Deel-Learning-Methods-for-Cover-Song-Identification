{
    "representation": "mfcc",
    "datasets": [
        {
            "type": "covers1000",
            "path": "/content/mfccs/",
            "n_samples": 100
        }
    ],
    "model": {
        "type": "resnet18",
        "config_path": "models/resnet18/config.json"
    },
    "loss": "triplet",
    "features": {
        "samples_per_song": 8,
        "input": "mfcc",
        "frame_size": 1400,
        "scale": [
            1,
            0.33
        ]
    },
    "train": {
        "train_perc": 0.8,
        "n_epochs": 10,
        "batch_size": 4,
        "lr": 5e-4,
        "patience": 6,
        "checkpoints_path": "checkpoints/",
        "results_path": "results/"
    }
}