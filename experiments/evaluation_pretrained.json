{
    "representation": [
        "hpcp",
        "mfcc"
    ],
    "train_datasets": [
        {
            "type": "covers1000",
            "path": [
                "/content/hpcps/",
                "/content/mfccs/"
            ],
            "n_samples": 1000
        }
    ],
    "test_datasets": [
        {
            "type": "covers80",
            "path": [
                "/content/hpcps80/content/hpcps80/",
                "/content/mfccs80/content/mfccs80/"
            ],
            "n_samples": 1000
        }
    ],
    "model": {
        "type": "cnn",
        "config_path": "checkpoints/example_model_03_10_22/config.json",
        "checkpoint_path": "checkpoints/example_model_03_10_22/checkpoint.tar"
    },
    "loss": "triplet",
    "features": {
        "n_batches": 256,
        "songs_per_batch": 32,
        "samples_per_song": 8,
        "input": "hpcp+mfcc",
        "frame_size": 1600,
        "scale": [
            1,
            0.2
        ]
    },
    "train": {
        "train_perc": 0.8,
        "n_epochs": 15,
        "batch_size": 4,
        "lr": 5e-4,
        "patience": 2,
        "checkpoints_path": "checkpoints/",
        "results_path": "results/"
    }
}