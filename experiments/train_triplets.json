{
  "representation": [
    "hpcp"
  ],
  "train_datasets": [
    {
      "type": "covers1000",
      "path": [
        "/content/hpcps/"
      ],
      "n_samples": 1000
    },
    {
      "type": "covers80",
      "path": [
        "/content/barbie_hpcp/content/barbie_dataset_hpcp/"
      ],
      "n_samples": 1000
    }
  ],
  "test_datasets": [
    {
      "type": "covers80",
      "path": [
        "/content/hpcps80/content/hpcps80/"
      ],
      "n_samples": 1000
    }
  ],
  "model": {
    "type": "cnn",
    "config_path": "models/cnn/config.json",
    "checkpoint_path": null
  },
  "loss": "triplet",
  "features": {
    "n_batches": 512,
    "songs_per_batch": 64,
    "input": "hpcp",
    "frame_size": 2600,
    "scale": [
      1,
      0.2
    ]
  },
  "train": {
    "train_perc": 0.8,
    "n_epochs": 15,
    "lr": 0.0005,
    "patience": 1,
    "checkpoints_path": "checkpoints/",
    "results_path": "results/"
  },
  "test": {
    "segmented": false
  }
}